template<typename I>
void
write(std::ostream& s, IndexSetT<I> const& is)
    {
    using parent = typename IndexSetT<I>::parent;
    parent const& pr = is;
    itensor::write(s,pr);
    }

template<typename I>
void
read(std::istream& s, IndexSetT<I> & is)
    {
    using parent = typename IndexSetT<I>::parent;
    parent & pr = is;
    itensor::read(s,pr);
    }

