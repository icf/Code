       end do
       Vinm_local(k)=dcmplx(onsitU)*Vinm_local(k)
    end do
  else if(dtype.EQ.'d') then
    do k=1,Dtot,1
       do sitei=1,Nsite,1
          Vinm_local(k)=Vinm_local(k)+Amat(sitei,sitei,k)*Amat(sitei+Nsite,sitei+Nsite,k)
       end do
       Vinm_local(k)=dcmplx(onsitU)*Vinm_local(k)
    end do
