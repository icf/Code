enddo
write(*,*)
write(*,*)
write(*,*)'F'
do i_deb=1,Nsite
  write(*,*)(dble(F(i_deb,j_deb)),j_deb=1,Nsite)
enddo
write(*,*)
write(*,*)'FSphid'
do i_deb=1,Nsite
  write(*,*)(dble(FSphid(i_deb,j_deb)),j_deb=1,Nspin(2))
enddo
write(*,*)
write(*,*)
write(*,*)
write(*,*)'FDphiu'
do i_deb=1,Nsite
  write(*,*)(dble(FDphiu(i_deb,j_deb)),j_deb=1,Nspin(2))
enddo
write(*,*)
write(*,*)
write(*,*)
write(*,*)
write(*,*)'Am1'
do i_deb=1,Nspin(1)
  write(*,*)(dble(Am1(i_deb,j_deb)),j_deb=1,Nspin(1))
enddo
write(*,*)
write(*,*)
write(*,*)
write(*,*)'Am1FDphiu'
do i_deb=1,Nspin(1)
  write(*,*)(dble(Am1FDphiu(i_deb,j_deb)),j_deb=1,Nsite)
enddo
write(*,*)
write(*,*)
write(*,*)
write(*,*)'PhiUAm1t'
do i_deb=1,Nsite
  write(*,*)(dble(PhiUAm1t(i_deb,j_deb)),j_deb=1,Nspin(1))
enddo
write(*,*)

write(*,*)'Vnormal = ',Vnormal
write(*,*)'Vanomalous = ',Vanomalous
write(*,*)'Vinm_local(k) = ',dcmplx(onsitU)*(Vnormal+Vanomalous)

